    },
    "version": "0.1.0"
  },
  "paths": {
    "/calendars": {
      "get": {
        "tags": [
          "calendars"
        ],
        "summary": "List user's calendars",
        "description": "Returns a list containing the single user calendar.\nSince user = calendar, this returns calendar properties from the user record.",
        "operationId": "list_calendars",
        "responses": {
          "200": {
            "description": "List of calendars",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CalendarInfo"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      }
    },
    "/devices": {
      "get": {
        "tags": [
          "devices"
        ],
        "summary": "List all device passwords for a user",
        "operationId": "list_device_passwords",
        "responses": {
          "200": {
            "description": "List of device passwords",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceListItem"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      },
      "post": {
        "tags": [
          "devices"
        ],
        "summary": "Create a new device password",
        "operationId": "create_device_password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDeviceRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Device password created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DevicePasswordResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      }
    },
    "/devices/{device_id}": {
      "delete": {
        "tags": [
          "devices"
        ],
        "summary": "Delete a device password",
        "operationId": "delete_device_password",
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "description": "Device ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Device password deleted successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Device password not found"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      }
    },
    "/events": {
      "get": {
        "tags": [
          "events"
        ],
        "summary": "List events",
        "operationId": "list_events",
        "parameters": [
          {
            "name": "start",
            "in": "path",
            "description": "Filter events starting after this time",
            "required": true,
            "schema": {
              "type": [
                "string",
                "null"
              ],
              "format": "date-time"
            }
          },
          {
            "name": "end",
            "in": "path",
            "description": "Filter events ending before this time",
            "required": true,
            "schema": {
              "type": [
                "string",
                "null"
              ],
              "format": "date-time"
            }
          },
          {
            "name": "limit",
            "in": "path",
            "description": "Maximum number of events to return",
            "required": true,
            "schema": {
              "type": [
                "integer",
                "null"
              ],
              "format": "int64"
            }
          },
          {
            "name": "offset",
            "in": "path",
            "description": "Number of events to skip",
            "required": true,
            "schema": {
              "type": [
                "integer",
                "null"
              ],
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EventResponse"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      },
      "post": {
        "tags": [
          "events"
        ],
        "summary": "Create a new event",
        "operationId": "create_event",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateEventRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Event created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      }
    },
    "/events/{id}": {
      "get": {
        "tags": [
          "events"
        ],
        "summary": "Get event by ID",
        "operationId": "get_event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Event ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Event not found"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      },
      "put": {
        "tags": [
          "events"
        ],
        "summary": "Update event",
        "operationId": "update_event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Event ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateEventRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Event updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Event not found"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "events"
        ],
        "summary": "Delete event",
        "operationId": "delete_event_handler",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Event ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Event deleted successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Event not found"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      }
    },
    "/health": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Health check endpoint",
        "description": "Returns 200 OK if the server and database are healthy",
        "operationId": "health_check",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "503": {
            "description": "Server is degraded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get current user profile",
        "description": "Returns the authenticated user's profile based on Telegram initData.",
        "operationId": "get_me",
        "responses": {
          "200": {
            "description": "Current user profile",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "telegram_auth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "AttendeeRole": {
        "type": "string",
        "description": "Attendee role (RFC 5545 ROLE parameter)",
        "enum": [
          "Organizer",
          "Attendee"
        ]
      },
      "CalendarInfo": {
        "type": "object",
        "description": "Calendar response (subset of User relevant to calendar functionality)",
        "required": [
          "id",
          "name",
          "color",
          "sync_token"
        ],
        "properties": {
          "color": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "sync_token": {
            "type": "string"
          }
        }
      },
      "CreateDeviceRequest": {
        "type": "object",
        "description": "Request to create a new device password",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Device name/label (e.g., \"iPhone\", \"Desktop\")",
            "example": "iPhone"
          }
        }
      },
      "CreateEventRequest": {
        "type": "object",
        "description": "Create event request",
        "required": [
          "uid",
          "summary",
          "start",
          "end",
          "is_all_day",
          "timezone"
        ],
        "properties": {
          "description": {
            "type": [
              "string",
              "null"
            ],
            "description": "Detailed description"
          },
          "end": {
            "type": "string",
            "format": "date-time",
            "description": "End time (for timed events)"
          },
          "is_all_day": {
            "type": "boolean",
            "description": "Whether this is an all-day event"
          },
          "location": {
            "type": [
              "string",
              "null"
            ],
            "description": "Event location"
          },
          "rrule": {
            "type": [
              "string",
              "null"
            ],
            "description": "RFC 5545 recurrence rule",
            "example": "FREQ=WEEKLY;BYDAY=MO"
          },
          "start": {
            "type": "string",
            "format": "date-time",
            "description": "Start time (for timed events)"
          },
          "summary": {
            "type": "string",
            "description": "Event summary/title",
            "example": "Team Meeting"
          },
          "timezone": {
            "$ref": "#/components/schemas/Timezone",
            "description": "IANA timezone name"
          },
          "uid": {
            "type": "string",
            "description": "iCalendar UID (stable across syncs)",
            "example": "unique-uid-123"
          }
        }
      },
      "DeviceListItem": {
        "type": "object",
        "description": "Device password list item (without password)",
        "required": [
          "id",
          "name",
          "created_at"
        ],
        "properties": {
          "created_at": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "last_used_at": {
            "type": [
              "string",
              "null"
            ]
          },
          "name": {
            "type": "string"
          }
        }
      },
      "DevicePasswordResponse": {
        "type": "object",
        "description": "Response containing generated device password",
        "required": [
          "id",
          "name",
          "created_at"
        ],
        "properties": {
          "created_at": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "last_used_at": {
            "type": [
              "string",
              "null"
            ]
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": [
              "string",
              "null"
            ],
            "description": "Plain text password - only shown once at creation",
            "example": "aB1c2D3e4F5g6H7i8J9k0L1m"
          }
        }
      },
      "Event": {
        "type": "object",
        "description": "Event entity",
        "required": [
          "id",
          "user_id",
          "uid",
          "summary",
          "is_all_day",
          "status",
          "timezone",
          "version",
          "etag",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "end": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "end_date": {
            "type": [
              "string",
              "null"
            ],
            "format": "date"
          },
          "etag": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "is_all_day": {
            "type": "boolean"
          },
          "location": {
            "type": [
              "string",
              "null"
            ]
          },
          "rrule": {
            "type": [
              "string",
              "null"
            ]
          },
          "start": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "start_date": {
            "type": [
              "string",
              "null"
            ],
            "format": "date"
          },
          "status": {
            "$ref": "#/components/schemas/EventStatus"
          },
          "summary": {
            "type": "string"
          },
          "timezone": {
            "$ref": "#/components/schemas/Timezone"
          },
          "uid": {
            "type": "string"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "user_id": {
            "type": "string",
            "description": "Owner's user ID (telegram_id)"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "EventAttendee": {
        "type": "object",
        "description": "Event attendee with RSVP status",
        "required": [
          "id",
          "event_id",
          "email",
          "role",
          "status",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "email": {
            "type": "string"
          },
          "event_id": {
            "type": "string",
            "format": "uuid"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "role": {
            "$ref": "#/components/schemas/AttendeeRole"
          },
          "status": {
            "$ref": "#/components/schemas/ParticipationStatus"
          },
          "telegram_id": {
            "type": [
              "integer",
              "null"
            ],
            "format": "int64"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "EventResponse": {
        "type": "object",
        "description": "Event response (same as Event model)",
        "required": [
          "id",
          "user_id",
          "uid",
          "summary",
          "is_all_day",
          "status",
          "timezone",
          "version",
          "etag",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "end": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "end_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "etag": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "is_all_day": {
            "type": "boolean"
          },
          "location": {
            "type": [
              "string",
              "null"
            ]
          },
          "rrule": {
            "type": [
              "string",
              "null"
            ]
          },
          "start": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "start_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "status": {
            "$ref": "#/components/schemas/EventStatus"
          },
          "summary": {
            "type": "string"
          },
          "timezone": {
            "$ref": "#/components/schemas/Timezone"
          },
          "uid": {
            "type": "string"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "user_id": {
            "type": "string"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "EventStatus": {
        "type": "string",
        "description": "Event status enumeration",
        "enum": [
          "Confirmed",
          "Tentative",
          "Cancelled"
        ]
      },
      "HealthResponse": {
        "type": "object",
        "description": "Health check response",
        "required": [
          "status",
          "database"
        ],
        "properties": {
          "database": {
            "type": "string",
            "description": "Database status (\"healthy\" or \"unhealthy\")",
            "example": "healthy"
          },
          "status": {
            "type": "string",
            "description": "Server status (\"ok\" or \"degraded\")",
            "example": "ok"
          }
        }
      },
      "ListEventsQuery": {
        "type": "object",
        "description": "List events query parameters",
        "properties": {
          "end": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time",
            "description": "Filter events ending before this time"
          },
          "limit": {
            "type": [
              "integer",
              "null"
            ],
            "format": "int64",
            "description": "Maximum number of events to return",
            "default": 100
          },
          "offset": {
            "type": [
              "integer",
              "null"
            ],
            "format": "int64",
            "description": "Number of events to skip",
            "default": 0
          },
          "start": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time",
            "description": "Filter events starting after this time"
          }
        }
      },
      "MeResponse": {
        "type": "object",
        "required": [
          "id",
          "authenticated",
          "timezone"
        ],
        "properties": {
          "authenticated": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          },
          "timezone": {
            "$ref": "#/components/schemas/Timezone"
          },
          "username": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "ParticipationStatus": {
        "type": "string",
        "description": "Participation status (RFC 5545 PARTSTAT parameter)",
        "enum": [
          "NeedsAction",
          "Accepted",
          "Declined",
          "Tentative"
        ]
      },
      "Timezone": {
        "type": "string",
        "description": "Timezone newtype wrapping chrono_tz::Tz with SQLx and Serde support\n\nStored in database as TEXT (IANA timezone name like \"America/New_York\")",
        "example": "UTC"
      },
      "UpdateEventRequest": {
        "type": "object",
        "description": "Update event request",
        "properties": {
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "end": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "is_all_day": {
            "type": [
              "boolean",
              "null"
            ]
          },
          "location": {
            "type": [
              "string",
              "null"
            ]
          },
          "rrule": {
            "type": [
              "string",
              "null"
            ]
          },
          "start": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "status": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/EventStatus"
              }
            ]
          },
          "summary": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "User": {
        "type": "object",
        "description": "User entity (includes calendar data since user = calendar)\n\nThe telegram_id serves as the primary key and unique identifier.\nCalendar properties are merged into this struct since each user has exactly one calendar.",
        "required": [
          "id",
          "timezone",
          "calendar_name",
          "calendar_color",
          "sync_token",
          "ctag",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "calendar_color": {
            "type": "string",
            "description": "Calendar hex color for UI"
          },
          "calendar_name": {
            "type": "string",
            "description": "Calendar display name"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "ctag": {
            "type": "string",
            "description": "Collection tag for change detection"
          },
          "id": {
            "type": "string",
            "description": "Primary key: Telegram's permanent numeric ID"
          },
          "sync_token": {
            "type": "string",
            "description": "RFC 6578 sync token for CalDAV sync-collection"
          },
          "telegram_username": {
            "type": [
              "string",
              "null"
            ],
            "description": "Telegram username/handle (can change, used for CalDAV URLs)"
          },
          "timezone": {
            "$ref": "#/components/schemas/Timezone",
