# Database Configuration
DATABASE_URL=postgresql://televent:dev@localhost:5432/televent

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=3000
API_BASE_URL=http://localhost:3000

# JWT Configuration (for web sessions)
JWT_SECRET=change_this_to_a_random_secret_in_production
JWT_EXPIRY_HOURS=24

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@televent.app
SMTP_FROM_NAME=Televent

# Observability
RUST_LOG=info,televent=debug,sqlx=warn
JAEGER_ENDPOINT=http://localhost:4317

# Sentry (optional - for error tracking)
SENTRY_DSN=

# Environment
ENVIRONMENT=development
